{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "constants/*": [
        "./constants/*"
      ],
      "hooks/*": [
        "./hooks/*"
      ],
      "shared/*": [
        "./shared/*"
      ],
      "pages/*": [
        "./pages/*"
      ],
      "links": [
        "./constants/links.ts"
      ],
      "zod-schemas/*": [
        "./zod-schemas/*"
      ],
      "graphql/*": [
        "./graphql/*"
      ],
      "storage": [
        "./storage/index.ts"
      ],
      "generated": [
        "./graphql/generated.ts"
      ],
      "utils": [
        "./utils/index.ts"
      ],
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
