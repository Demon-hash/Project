{
  "name": "client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint:check": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --ignore-pattern src/graphql/",
    "ts:check": "tsc",
    "lint:fix": "eslint . --ext ts,tsx --fix --ignore-pattern src/graphql/",
    "prettier:fix": "prettier src/**/*.{ts,tsx} --write --ignore-unknown --cache",
    "codegen": "graphql-codegen --config graphql-config.ts",
    "dev": "npm run codegen && vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@apollo/client": "^3.8.3",
    "graphql": "^16.8.0",
    "i18next": "^23.4.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@hookform/resolvers": "^3.3.1",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toggle": "^1.0.3",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.15",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "i18next-browser-languagedetector": "^7.1.0",
    "lint-staged": "^14.0.1",
    "lucide-react": "^0.274.0",
    "postcss": "^8.4.29",
    "prettier": "^3.0.3",
    "react-hook-form": "^7.46.1",
    "react-i18next": "^13.2.2",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-tsconfig-paths": "^4.2.0",
    "zod": "^3.22.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix --ignore-pattern src/graphql/",
      "prettier --write --cache"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "react",
      "<TYPES>",
      "<TYPES>^[.]",
      "<THIRD_PARTY_MODULES>",
      "^(assets|constants|hooks|components|shared|utils|schemas|graphql)/?(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  }
}
