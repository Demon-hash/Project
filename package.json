{
  "name": "config",
  "version": "1.0.0",
  "private": true,
  "license": "ISC",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "lint:check": "eslint packages/{client,server}/**/*.ts?(x) --report-unused-disable-directives --max-warnings 0 --ignore-pattern **/graphql/* --ignore-pattern **/generated/*",
    "lint:fix": "eslint packages/{client,server}/**/*.ts?(x) --fix --ignore-pattern **/graphql/* --ignore-pattern **/generated/*",
    "prettier:fix": "prettier --write --cache",
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3"
  },
  "lint-staged": {
    "packages/{client,server}/**/*.ts?(x)": [
      "npm run lint:fix",
      "npm run prettier:fix"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "react",
      "<TYPES>",
      "<TYPES>^[.]",
      "<THIRD_PARTY_MODULES>",
      "^(assets|constants|hooks|components|shared|utils|schemas|graphql)/?(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  }
}
